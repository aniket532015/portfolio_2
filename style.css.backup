@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;1,500&display=swap');
* {
    margin: 0;
    padding: 0;
    scroll-behavior: smooth;
    box-sizing: border-box;
    font-family: "poppins";
    outline: none;
    border: none; 
    color: #fff;
}
body{
    background: #0f0a0a;
    height: 100vh;
}
html{
    font-size: 62.5%;
    overflow-x: hidden;
}
.header{
    position: fixed;
    left: 0;
    top: 0;
    padding: 2rem 5%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
}
.sticky{
    border-bottom: 2px solid rgba(255,255,255,.1);
    background: #0f0a0a;
}
.logo{
    font-size: 2.9rem;
    font-weight: 600;
    text-decoration: none;
    color: #fff;
    transform: translateX(-100%);
    opacity: 0;
    animation: RightSlide 1s ease forwards;
}
@keyframes  RightSlide{
    0%{
        transform: translateX(-100%);
        opacity: 0;
    }
    100%{
        transform: translateX(0%);
        opacity: 1;
    }
}

#menu{
    color: #1f2937;
    font-size: 2.5rem;
    display: none;
}
.navbar{
    white-space: nowrap;
}
.navbar a{
    display: inline-block;
    font-size: 1.5rem;
    text-decoration: none;
    margin: 0 1.2rem;
    font-weight: 500;
    letter-spacing: .02;
    transition: .5s ease;
    transform: translateY(-100px);
    opacity: 0;
    animation: TopSlide 1s ease forwards;
    animation-delay: calc(.2s * var(--vlr));
    color: #4b5563;
}
@keyframes  TopSlide{
    0%{
        transform: translateY(-100px);
        opacity: 0;
    }
    100%{
        transform: translateY(0px);
        opacity: 1;
    }
}
.navbar a:hover,.navbar a.active{
    color: #2563eb;
}
section{
    padding: 10rem 9% 2rem;
    min-height: 100vh;
}
.about,.experience,.education,.skills,.projects,.certifications,.contact{
    overflow: hidden;
}
.home{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.text-content{
    max-width: 70rem;
}
.text-content h1{
    font-size: 5rem;
    color: #1f2937;
    text-transform: capitalize;
    letter-spacing: .05rem;
    font-weight: 600;
    transform: translateY(-100px);
    opacity: 0;
    animation: RightSlide 1s ease forwards;
    animation-delay: 1s;
}
.text-animation{
    position: relative;
    width: 45rem;
}
.text-animation h2{
    font-size: 3.2rem;
    font-weight: 700;
    color: transparent;
    -webkit-text-stroke: .7px #2563eb;
    background: linear-gradient(#2563eb,#2563eb);
    background-repeat: no-repeat;
    -webkit-background-clip: text;
    background-clip: text;
    background-position: -45rem 0;
    transform: translateY(-100px);
    opacity: 0;
    animation: textSlide 6s linear infinite,
    TopSlide 1s ease forwards;
    animation-delay: 2s,1.2s;
}
@keyframes textSlide{
    0%,15%,100%{
        background-position: -45rem 0;
    }
    60%,90%{
        background-position: 0 0;
    }
}
.text-animation::before{
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 0;
    border-right: 2px solid #2563eb;
    transform: translateY(-100px);
    opacity: 0;
    animation: CursorSlide 6s linear infinite,
    TopSlide 1s ease forwards;
    animation-delay: 2s,1.2s;
}
@keyframes CursorSlide {
    0%,10%,100%{
        width: 0;
    }
    65%,78%,85%{
        opacity: 1;
        width: 100%;
    }
    75%,81%
    {
        opacity: 0;
    }

}
.text-content p{
    font-size: 1.4rem;
    margin: 1rem 0;
    transform: translateX(100px);
    opacity: 0;
    animation: leftSlide 2s ease forwards;
    animation-delay: 0.5s;
}
@keyframes leftSlide{
    0%{
        transform: translateX(100px);
        opacity: 0;
    }
    100%{
        transform: translateX(0px);
        opacity: 1;
    }
}
.btn-section{
    width: 32.5rem;
    height: 5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 2rem 0;
    position: relative;
}
.btn-section::before{
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    background: #f9fafb;
    height: 100%;
    width: 100%;
    z-index: 2;
    animation: Slide 1s ease forwards;
    animation-delay: 1.6s;
}
@keyframes Slide{
    0%{
        width: 100%;
    }
    100%{
        width: 0;
    }
}
 .btn{
    height: 100%;
    width: 15rem;
    color: #ffffff;
    background: #2563eb;
    border: .2rem solid #2563eb;
    backdrop-filter: blur(5rem);
    border-radius: .8rem;
    font-size: 1.5rem;
    cursor: pointer;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
    z-index: 1;
}
.btn::before{
    content: "";
    position: absolute;
    left: 0;
    top: -100%;
    height: 300%;
    width: 100%;
    background: linear-gradient(
        #1d4ed8,#0891b2,#1d4ed8,#0891b2
    );
    z-index: -1;
    transition: .5s ease;
}
.btn:hover::before{
    top: 0;
}
.social-media {
    margin: 2rem 0;
}
.social-media i{
    display: inline-block;
    font-size: 2.5rem;
    background: #ffffff;
    border: .2rem solid #e5e7eb;
    padding: .8rem;
    margin: 0 .5rem;
    border-radius: 50%;
    color: #2563eb;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    animation: Bottom 1s ease forwards;
    animation-delay: calc(.2s * var(--vlr));
    transform: translateY(100px);
    opacity: 0;

}
@keyframes Bottom{
    0%{
        transform: translateY(100px);
    opacity: 0;
    }
    100%{
        transform: translateY(0px);
    opacity: 1;
    }
}
.social-media i::after{
    content: "";
    position: absolute;
    left: 0;
    top: -100%;
    height: 300%;
    width: 100%;
    background: linear-gradient(
        #2563eb,#0891b2,#2563eb,#0891b2
    );
    z-index: -1;
    transition: .5s ease;
}

i:hover::after{
    top: 0;
}
.home img{
    width: 30vw;
    background: #ffffff;
    border: .2rem solid #e5e7eb;
    border-radius: 50%;
    filter: drop-shadow(0 0 2rem rgba(37, 99, 235, 0.3));
    animation: Scale 1s ease forwards;
    scale: 0;
    animation-delay: 2s;
}
@keyframes Scale{
    0%{
        scale: 0;
    }
    100%{
        scale: 1;
    }
}
/* about section */
.about{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding-bottom: 6rem;
    gap: 2rem;
}
.title{
    font-size: 5rem;
    margin-bottom: 3rem;
    font-weight: 600;
    text-align: center;
    transform: translateY(-100px);
    opacity: 0;
}
section.start-animation .title{
    animation: top 1s ease forwards;
}
@keyframes top{
    0%{
        transform: translateY(-100px);
        opacity: 0;
    }
    100%{
        transform: translateY(0px);
        opacity: 1;
    }
}
.title span{
    color: #2563eb;
}
.about img{
    height: 20rem;
    width: 20rem;
    background: #ffffff;
    border: .2rem solid #e5e7eb;
    border-radius: 50%;
    filter: drop-shadow(0 0 2rem rgba(37, 99, 235, 0.3));
    scale: 0;
}
section.start-animation .aboutImg{
    animation: scaleout 1s ease forwards;
}
@keyframes scaleout{
    0%{
       scale: 0;
    }
    100%{
     scale: 1;
    }
}
.text-content2{
    text-align: center;
}
.text-content2 h2{
    font-size: 2.6rem;
    transform: translatex(-100px);
    opacity: 0;
}
section.start-animation .text-content2 h2{
    animation: Right 1s ease forwards;
}
@keyframes Right{
    0%{
        transform: translatex(-100px);
        opacity: 0;
    }
    100%{
        transform: translatex(0px);
        opacity: 1;
    }
}
.text-content2 p{
    font-size: 1.5rem;
    margin: 2rem 0 3rem;
    transform: translatex(100px);
    opacity: 0;
}
section.start-animation .text-content2 p{
    animation: Left 1s ease forwards;
}
@keyframes Left{
    0%{
        transform: translatex(100px);
        opacity: 0;
    }
    100%{
        transform: translatex(0px);
        opacity: 1;
    }
}
.text-content2 .btn{
    padding: .9rem .5rem;
    transform: translateY(100px);
    opacity: 0;
}

section.start-animation .text-content2 .btn{
    animation: Bottoms 1s ease forwards;
}
@keyframes Bottoms{
    0%{
        transform: translateY(100px);
        opacity: 0;
    }
    100%{
        transform: translatey(0px);
        opacity: 1;
    }
}
/* education section */
.row {
    display: flex;
    column-gap: 4rem;
    flex-wrap: wrap;
}
.column {
    flex: 1 1 30rem;
}
.column:nth-child(1) {
    opacity: 0;
    transform: translateX(-100px);
}
section.start-animation .column:nth-child(1) {
    animation: Right 1s ease forwards;
    animation-delay: 1.2s;
}

.column:nth-child(2) {
    opacity: 0;
    transform: translateX(100px);
}
section.start-animation .column:nth-child(2) {
    animation: Left 1s ease forwards;
    animation-delay: 1.2s;
}

.column h2 {
    font-size: 2.5rem;
    margin: 2rem 0 1rem 1.96rem;
    transform: translateY(-100px);
    opacity: 0;
}
section.start-animation .column h2 {
    animation: top 1s ease forwards;
    animation-delay: 1.2s;
}

.box {
    border-left: .2rem solid #2563eb;
}

.education-content {
    padding-left: 1.9rem;
}

.education-content .content {
    padding: 1.5rem;
    border: .2rem solid #2563eb;
    background: #ffffff;
    border-radius: .5rem;
    margin-bottom: 2rem;
    position: relative;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.content::before {
    content: "";
    position: absolute;
    left: -2.8rem;
    top: -1.5rem;
    height: 1.4rem;
    width: 1.4rem;
    border-radius: 50%;
    background: #2563eb;
}

.content .year {
    font-size: 1.5rem;
    color: #2563eb;
}
.content .year i {
    color: #2563eb;
    font-size: 1.5rem;
    margin-left: .5rem;
}

.content h3 {
    font-size: 1.7rem;
    letter-spacing: .05rem;
    margin: .5rem 0;
}

.content p {
    font-size: 1.5rem;
}
.column:nth-child(1) {
    opacity: 0;
    transform: translateX(-100px);
    animation: Right 1s ease forwards;
    animation-delay: 1.2s; /* This can be adjusted */
}

.column:nth-child(2) {
    opacity: 0;
    transform: translateX(100px);
    animation: Left 1s ease forwards;
    animation-delay: 1.2s; /* This can be adjusted */
}

@keyframes Right {
    0% {
        transform: translateX(-100px);
        opacity: 0;
    }
    100% {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes Left {
    0% {
        transform: translateX(100px);
        opacity: 0;
    }
    100% {
        transform: translateX(0);
        opacity: 1;
    }
}
.start-animation {
    transform: translateY(0);
    opacity: 1;
    transition: transform 0.5s ease-out, opacity 0.5s ease-out;
}





/* skill-content */
.wrapper{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 5rem;
    flex-wrap: wrap;
}
.skill-title{
    font-size: 2.4rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    opacity: 0;
    transform: translateY(-100px);
}
section.start-animation .skill-title{
    animation: top 1s ease forwards;
    animation-delay: 1.2s;
}
.skill-content{
    width: 100%;
    flex:  1 1 30rem;
}
.skill-box{
    height: 100%;
    width: 100%;
    padding: 8rem 4rem;
    background: #ffffff;
    border-radius: 1rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
}
.skill-box1{
    opacity: 0;
    transform: translateX(-100px);
}
section.start-animation .skill-box1{
    animation:  Right 1s ease forwards;
    animation-delay: 1.2s;
}
.skill-box2{
    opacity: 0;
    transform: translateX(100px);
}
section.start-animation .skill-box2{
    animation:Left 1s ease forwards;
    animation-delay: 1.4s;
}
.single-skill{
    display: flex;
    justify-content: space-between;
    margin: 2rem 0;
}
.single-skill span{
    font-size: 1.6rem;
}

.bar-side{
    background: #e5e7eb;
    height: 1rem;
    border-radius: 50rem;
    position: relative;
    overflow: hidden;
}
.bar{
    position: absolute;
    height: 100%;
    background: linear-gradient(90deg, #2563eb, #0891b2);
}
.bar-1{
    width: 85%;
}
.bar-2{
    width: 90%;
}
.bar-3{
    width: 80%;
}
.bar-4{
    width: 75%;
}
.bar-5{
    width: 70%;
}

/* contact section */
/* Base form and input styling */
section form {
    max-width: 70rem;
    text-align: center;
    margin: 1rem auto 3rem;
}

.input-box {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

input, textarea {
    width: 100%;
    padding: 1.5rem;
    background: #ffffff;
    border: 0.2rem solid #e5e7eb;
    outline: none;
    backdrop-filter: blur(10px);
    border-radius: 0.8rem;
    margin: 0.7rem 0;
    transition: opacity 0.6s ease, transform 0.6s ease;
    transform: translateY(100px);
    opacity: 0;
    color: #1f2937;
}

.input-box input {
    width: 49%;
}

input::placeholder, textarea::placeholder {
    font-size: 1.5rem;
    letter-spacing: 0.02rem;
    color: #9ca3af;
}

textarea {
    resize: none;
}

input:focus, textarea:focus {
    border: 0.2rem solid #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.contact .btn {
    margin-top: 2rem;
    padding: 1rem 2rem;
    cursor: pointer;
    background: #2563eb;
    border: 0.2rem solid #2563eb;
}

.contact .btn:hover {
    background: #1d4ed8;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
    color: #fff
}

.contact-info {
    margin-bottom: 3rem;
}

.contact-info p {
    font-size: 1.6rem;
    margin: 1rem 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
}

.contact-info i {
    color: #2563eb;
    font-size: 2rem;
}

.contact-info a {
    text-decoration: none;
    transition: color 0.3s ease;
    color: #4b5563;
}

.contact-info a:hover {
    color: #2563eb;
}

/* Animation properties */
section.start-animation input, 
section.start-animation textarea, 
section.start-animation .btn {
    transform: translateY(0);
    opacity: 1;
}

/* Animation delays for smoother sequence */
section.start-animation input:nth-child(1) {
    transition-delay: 0.2s;
}
section.start-animation input:nth-child(2) {
    transition-delay: 0.4s;
}
section.start-animation textarea {
    transition-delay: 0.6s;
}
section.start-animation .btn {
    transition-delay: 0.8s;
}

/* Keyframe animation for fallback */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(100px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

section.start-animation textarea,
section.start-animation .btn {
    animation: fadeInUp 0.8s ease forwards;
}




/* footer */

footer{
    background: #ffffff;
    padding: 2rem 9% 1.5rem;
    position: relative;
    border-top: 1px solid #e5e7eb;
}

.footer-content{
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
}

.footer-contact{
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    width: 100%;
    justify-content: center;
}

.contact-item{
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.2rem;
    color: #1f2937;
    padding: 0.8rem 1rem;
    background: #f9fafb;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
    transition: all 0.3s ease;
    white-space: nowrap;
}

.contact-item:hover{
    background: #eff6ff;
    border-color: #2563eb;
    transform: translateY(-2px);
}

.contact-item i{
    color: #2563eb;
    font-size: 1.6rem;
    min-width: 1.6rem;
}

.contact-item span,
.contact-item a{
    color: #1f2937;
    text-decoration: none;
    transition: color 0.3s ease;
}

.contact-item a:hover{
    color: #2563eb;
}

.footer-text{
    text-align: center;
    border-top: 1px solid #e5e7eb;
    padding-top: 1.5rem;
    width: 100%;
}

.footer-text p{
    font-size: 1.4rem;
    color: #6b7280;
    margin: 0;
}

.back-to-top{
    position: absolute;
    top: 2rem;
    right: 9%;
}

.back-to-top i{
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    background: #2563eb;
    color: #ffffff;
    border-radius: 50%;
    font-size: 2rem;
    transition: all 0.3s ease;
}

.back-to-top:hover i{
    background: #1d4ed8;
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}
/* RESPONSIVE */
@media(max-width:1200px){
    html{
        font-size: 55;
    }
}
@media(max-width:991px){
    .header{
        padding: 2rem 6%;
    }
    section{
        padding: 10rem 3% 2rem;
    }
    .contact{
        min-height: auto;
    }
    footer{
        padding: 2rem 3% 1.5rem;
    }
    .footer-contact{
        flex-direction: column;
        gap: 1rem;
    }
    .contact-item{
        font-size: 1.1rem;
        width: 100%;
        max-width: 300px;
        justify-content: center;
    }
    .back-to-top{
        right: 3%;
    }
}
@media(max-width:1200px){
    .navbar a{
        margin: 0 1.0rem;
        font-size: 1.5rem;
    }
}
@media(max-width:1024px){
    .navbar a{
        margin: 0 0.8rem;
        font-size: 1.4rem;
    }
}
@media(max-width:768px){
    #menu{
        display: block;
    }
    .navbar{
        position: absolute;
        left: 0;
        top: 100%;
        width: 100%;
        padding: 1rem 3%;
        background: #ffffff;
        border-top: 1px solid #e5e7eb;
        border-bottom: .2rem solid #e5e7eb;
        display: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }
    .navbar.active{
        display: block;
    }
    .navbar a{
        display: block;
        margin: 3rem 0;
        font-size: 2rem;
    }
    .home{
        flex-direction: column-reverse;
    }
    .home .text-content{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .home .text-content h1{
        font-size: 4rem;
    }
    .text-animation{
        width: 100%;
        max-width: 40rem;
    }
    .text-animation h2{
        font-size: 2.8rem;
    }
    .home img{
        width: 40vw;
    }
    .about{
        flex-direction: column;
    }
    .about img{
        width: 20rem;
        height: 20rem;
    }
}
@media(max-width:450px){
    html{
        font-size: 50%;
    }
    .input-box input{
        width: 100%;
    }
} 